void EnumStmt() : {}
{
    <ENUM> Identifier() "{" Identifier() ( "," Identifier() )* "}"
}
void SwitchStmt() : {}
{
    <SWITCH> "(" Identifier() ")" <LACC>
    (CaseStmt())* (DefaultStmt())?
}
void CaseStmt() : {}
{
    <CASE> (Identifier() | IntValue()) ":"
    Block()
    <BREAK> <SEMICOLON>

}
void DefaultStmt() : {}
{
    <DEF> ":"
    Block()
    <BREAK> <SEMICOLON>
}


// ---------- STATEMENTS END ----------

// ---------- EXPRESSIONS BEGIN ----------

void Expr() #void : {}
{
    BasicExpr() | ArrayExpr() | ETOULogExpr()
}

void BasicExpr() #void : {}
{
	LOOKAHEAD(2) Identifier() |
	IntValue()
}

// TODO: Ajouter tous vos expressions ici (Voir énoncé)

void ArrayExpr() : {}
{
    <LBRA> (Expr() (<COMMA> Expr())*)? <RBRA>
}

void ParenExpr() : {}
{
    <LPAREN> Expr() <RPAREN>
}
void NotExpr() : {}
{
    <NOT> ParenExpr() | ParenExpr()
}
void NegaExpr() : {}
{
    <MINUS> NotExpr() | NotExpr()
}
void MulDivExpr() : {}
{
    NegaExpr() ( ("*" | "/") NegaExpr() )*
}
void AddSubExpr() : {}
{
     MulDivExpr() ( ("+" | "-") MulDivExpr() )*
}
void ComparExpr() : {}
{
   AddSubExpr() ( <COMPARE> AddSubExpr() )?
}
void ETOULogExpr() : {}
{
   ComparExpr() ( <LOGIC> ComparExpr() )?
}
// Expressions de base (Ne pas modifier):

void Identifier() : {}
{
	<IDENTIFIER>
}

void IntValue() : {}
{
	<INTEGER>
}

void RealValue() : {}
{
	<REAL>
}

// ---------- EXPRESSIONS END ----------
